<!DOCTYPE html>
<html lang="en">

<head>
<%- include('../layouts/admin/header') %>
<head>

    <%- include('../layouts/admin/side-bar') %>

        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
            <!-- Navbar -->
            <%- include('../layouts/admin/nav') %>
                <!-- End Navbar -->
                <div class="container-fluid py-4">


                    <div class="row">
                        <div class="col-md-7 mt-4">
                            <div class="card">
                                <div class="card-header pb-0 px-3">
                                    <h6 class="mb-0">Questions</h6>
                                </div>
                                <div class="card-body pt-4 p-3">
                                    <ul class="list-group">
                                        <% qst.forEach(function(res){%>
                                          
                                                    <li
                                                        class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                                                        <div class="d-flex flex-column">
                                                            <h6 class="mb-3 text-sm">
                                                                <%= res.Category %>
                                                            </h6>
                                                            <span class="mb-2 text-xs">Question: <span
                                                                    class="text-dark font-weight-bold ms-sm-2">
                                                                    <%= res.question %>
                                                                </span></span>
                                                            <span class="mb-2 text-xs"> <span
                                                                    class="text-dark ms-sm-2 font-weight-bold">
                                                                    <%= res.question1 %>
                                                                </span></span>
                                                        </div>
                                                        <div class="ms-auto text-end">
                                                            <!-- <a class="btn btn-link text-danger text-gradient px-3 mb-0"
                                                            href="javascript:;"><i class="far fa-trash-alt me-2"></i>Delete</a> -->
                                                            <% makeQ.forEach(function(d){ %>
                                                                <!-- <%= d.questionId %> -->
                                                                <% if(res.id == d.questionId) {%>
                                                                    <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="javascript:;"><%= d.score %> </a>
                                                                    <!-- <span class="mb-2 text-xs"> <span
                                                                        class="text-dark ms-sm-2 font-weight-bold">
                                                                       Score 
                                                                    </span></span> -->
                                                                    <!-- <%= d.questionId %> -->
                                                                    <% return %>
                                                                <%}%>
                                                            <%})%>
                                                                    <a class="btn btn-link text-dark px-3 mb-0" href="/admin/admin_view_applicant_response?pg=<%= current %>&id=<%= res.id %>&user_id=<%= user_id %>"><i
                                                                        class="fas fa-pencil-alt text-dark me-2"
                                                                        aria-hidden="true"></i>View Answer</a>
                                                                
                                                            
                                                        </div>
                                                    </li>
                                               
                                        <%})%>


                                    </ul>

                                    <div class="card-body p-3">
                                        <% if (pages > 0) { %>
                                       


                                            <ul class="pagination pagination-primary">
                                                <% if (current == 1) { %>
                                                    <li class="page-item disabled"><a class="page-link" href="javascript:void(0)" tabindex="-1">First</a></li>
                                                <% } else { %>
                                                    <li class="page-item "><a class="page-link" href="/admin/admin_view_questions?user_id=<%= user_id %>" tabindex="-1"><<</a></li>
                                                <% } %>
                                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                                <% if (i !== 1) { %>
                                                    <li class="page-item"><a class="page-link" href="javascript:void(0)">...</a></li>
                                                <% } %>
                                                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                                    <% if (i == current) { %>
                                                        <li class="page-item active"><a class="page-link" href="javascript:void(0)"><%= i %> </a></li>
                                                    <% } else { %>
                                                    <li class="page-item"><a class="page-link"  href="/admin/admin_view_questions?page=<%= i %>&user_id=<%= user_id %>"><%= i %></a></li>
                                                    <% } %>
                                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                                        <li class="page-item"><a class="page-link"  href="javascript:void(0)">...</a></li>
                                                    <% } %>
                                                <% } %>
                                                <% if (current == pages) { %>
                                                <li class="page-item"><a class="page-link" href="javascript:void(0)">>></a></li>
                                                <% } else { %>
                                                    <li class="page-item"><a class="page-link" href="/admin/admin_view_questions?page=<%= pages %>&user_id=<%= user_id %>">Last</a></li>
                                                <% } %>
                                            </ul>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>




                    <%- include('../layouts/admin/footer') %>
                        </body>

</html>