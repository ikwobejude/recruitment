<!DOCTYPE html>
<html lang="en">

<head>
<%- include('../layouts/admin/header') %>
<head>
    
        <%- include('../layouts/admin/side-bar') %>
        
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
          <!-- Navbar -->
          <%- include('../layouts/admin/nav') %>
          <!-- End Navbar -->
          <div class="container-fluid py-4">


            


            

              <div class="row my-4">
                <%- messages('messages', locals) %>
                <form action="/admin/questions" method="post" enctype="multipart/form-data">
                <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
                  <div class="card">
                    <div class="card-header pb-0">
                      <div class="row">
                        <div class="col-lg-12 col-12">
                          <h6>Question</h6>
                          <p class="text-sm mb-0">
                            <span class="font-weight-bold ms-1">Upload Questions</span> <span class="required">*</span>
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      
                        <div class="mb-3">
                          <input type="file" class="form-control bd" name="question" placeholder="Your answer" aria-label="Name" aria-describedby="email-addon">
                        </div>
                        
                    </div>
                  </div>
                </div>
                
              </div>
              <div style="justify-content: center;" class="pb-5">
                <div class="text-center">
                  <button type="submit" class="btn btn-round btn-sm mb-0 btn-outline-info me-2">UPLOAD</button>
                </div>
              </div>
            </form>


            <div class="row my-4">
              <div class="col-lg-12 col-md-12 mb-md-0 mb-4">
                <div class="card">
                  <div class="card-header pb-0">
                    <div class="row">
                      <div class="col-lg-6 col-7">
                        <h6>Questions</h6>
                        <p class="text-sm mb-0">
                          <i class="fa fa-check text-info" aria-hidden="true"></i>
                          <span class="font-weight-bold ms-1"><%= count %> </span> Question(<%= count > 0? "S":"" %>)
                        </p>
                      </div>
                      <div class="col-lg-6 col-5 my-auto text-end">
                        <div class="dropdown float-lg-end pe-4">
                          <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-ellipsis-v text-secondary"></i>
                          </a>
                          <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">View more</a></li>
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-body px-0 pb-2">
                    <div class="table-responsive">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Questions</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Expected Res</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Assigned Mark</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Required</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Category </th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% questions.forEach(function(result) {%>
                          <tr>
                            <td>
                              <div class="d-flex px-2 py-1">
                                <div class="d-flex flex-column justify-content-center">
                                  <h6 class="mb-0 text-sm"><%= result.question %> <br> <%= result.question_2 %></h6>
                                </div>
                              </div>
                            </td>
                            <td>  <%= result.expected_count %> </td>
                            <td class="align-middle text-center text-sm">
                              <span class="text-xs font-weight-bold"> <%= result.asigned_mark %> </span>
                            </td>
                            <td class="align-middle">
                              <span class="text-xs font-weight-bold"><%= result.qrequired == 1 ? "Required" : "Optional " %></span>
                            </td>
                            <td>  <%= result.category %> </td>
                            <td>  <%= result.status == 1? "active": "" %> </td>
                          </tr>
                          <%});%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <%- include('../layouts/admin/footer') %>
    </body>
</html>