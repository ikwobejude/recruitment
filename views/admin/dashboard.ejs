<!DOCTYPE html>
<html lang="en">

<head>
<%- include('../layouts/admin/header') %>
<head>
        <%- include('../layouts/admin/side-bar') %>
        
        <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
          <!-- Navbar -->
          <%- include('../layouts/admin/nav') %>
          <!-- End Navbar -->
          <div class="container-fluid py-4">
            <div class="row">
              <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <div class="card">
                  <div class="card-body p-3">
                    <div class="row">
                      <div class="col-8">
                        <div class="numbers">
                          <p class="text-sm mb-0 text-capitalize font-weight-bold">Applicants </p>
                          <h5 class="font-weight-bolder mb-0"> 
                            <%= individualCount %>
                            <span class="text-success text-sm font-weight-bolder"></span>
                          </h5>
                        </div>
                      </div>
                      <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                          <i class="ni ni-money-coins text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <a href="/admin/admin_view_applications">
                  <div class="card">
                    <div class="card-body p-3">
                      <div class="row">
                        <div class="col-8">
                          <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Uncompleted</p>
                            <h5 class="font-weight-bolder mb-0">
                              <%= individualCount - completed %>
                              <!-- <span class="text-success text-sm font-weight-bolder">+3%</span> -->
                            </h5>
                          </div>
                        </div>
                        <div class="col-4 text-end">
                          <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
                
              </div>
              <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
                <a href="/admin/admin_view_applications?complect=8">
                  <div class="card">
                    <div class="card-body p-3">
                      <div class="row">
                        <div class="col-8">
                          <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold"> completed</p>
                            <h5 class="font-weight-bolder mb-0">
                              <%= completed %>
                              <!-- <span class="text-danger text-sm font-weight-bolder">-2%</span> -->
                            </h5>
                          </div>
                        </div>
                        <div class="col-4 text-end">
                          <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
                
              </div>
              <div class="col-xl-3 col-sm-6">
                <div class="card">
                  <div class="card-body p-3">
                    <div class="row">
                      <div class="col-8">
                        <div class="numbers">
                          <p class="text-sm mb-0 text-capitalize font-weight-bold">Payments</p>
                          <h5 class="font-weight-bolder mb-0">
                            <%= completed * 1000 - 900 %>
                            <!-- <span class="text-success text-sm font-weight-bolder">+5%</span> -->
                          </h5>
                        </div>
                      </div>
                      <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                          <i class="ni ni-cart text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="row my-4">
              <div class="col-lg-8 col-md-6 mb-md-0 mb-4">
                <div class="card">
                  <div class="card-header pb-0">
                    <div class="row">
                      <div class="col-lg-6 col-7">
                        <!-- <h6>APPLICANTS</h6> -->
                        <p class="text-sm mb-0">
                          <i class="fa fa-check text-info" aria-hidden="true"></i>
                          <span class="font-weight-bold ms-1">Recent</span> applicants
                        </p>
                      </div>
                      <div class="col-lg-6 col-5 my-auto text-end">
                        <div class="dropdown float-lg-end pe-4">
                          <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-ellipsis-v text-secondary"></i>
                          </a>
                          <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">View more</a></li>
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                            <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-body px-0 pb-2">
                    <div class="table-responsive">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Companies</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">MDA</th>
                            <!--<th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">SCORE</th>-->
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Completion</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% applicant.forEach(function(result) {%>
                            <% let prg =  result.current_step == 8 ? 100 
                            : result.current_step == 1 ? 10 
                            : result.current_step == 2 ? 20
                            : result.current_step == 10 ? 30
                            : result.current_step == 3 ? 40
                            : result.current_step == 4 ? 50
                            : result.current_step == 5 ? 60
                            : result.current_step == 6 ? 70 
                            : result.current_step == 7 ? 80 : 0 %>
                          <tr>
                            <td>
                              <div class="d-flex px-2 py-1">
                                <!-- <div>
                                  <img src="../assets/img/small-logos/logo-xd.svg" class="avatar avatar-sm me-3" alt="xd">
                                </div> -->
                                <div class="d-flex flex-column justify-content-center">
                                  <h6 class="mb-0 text-sm"><%= result.applicant_fullname.length > 20 ?  result.applicant_fullname.slice(0, 20)+'...' :  result.applicant_fullname %> <br> <%= result.email %></h6>
                                </div>
                              </div>
                            </td>
                            <td>
                              <%= result.name %>
                            </td>
                            <!--<td class="align-middle text-center text-sm">-->
                            <!--  <span class="text-xs font-weight-bold"> <%= result.score%> </span>-->
                            <!--</td>-->
                            <td class="align-middle">
                              <div class="progress-wrapper w-75 mx-auto">
                                <div class="progress-info">
                                  <div class="progress-percentage">
                                    <span class="text-xs font-weight-bold"><%= prg %></span>
                                  </div>
                                </div>
                                <div class="progress">
                                  <div class="progress-bar bg-gradient-info w-<%=prg %>" role="progressbar" aria-valuenow="<%= prg %>" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                              </div>
                            </td>
                          </tr>
                          <%});%>
                          
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 col-md-6">
                <div class="card h-100">
                  <div class="card-header pb-0">
                    <h6>MDAs</h6>
                    <p class="text-sm">
                      <i class="fa fa-arrow-up text-success" aria-hidden="true"></i>
                      <span class="font-weight-bold">Completed </span>applicantion by MDA
                    </p>
                  </div>
                  <div class="card-body p-3">
                    <div class="timeline timeline-one-side">
                      <% ministryap.forEach((mda) => {%>
                        <div class="timeline-block mb-3">
                          <span class="timeline-step">
                            <i class="ni ni-bell-55 text-success text-gradient"></i>
                          </span>
                          <div class="timeline-content">
                            <h6 class="text-dark text-sm font-weight-bold mb-0"> <%= mda.name %> </h6>
                            <p class="text-secondary font-weight-bold text-xs mt-1 mb-0">Has <span class="font-weight-bolder mb-0"> <%= mda.count %></span>  Applications</p>
                          </div>
                        </div>
                     <%})%>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            
           


           
  
        <%- include('../layouts/admin/footer') %>
    </body>
</html>