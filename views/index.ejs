    function taxrin(len) {
      len = len || 100;
      var nuc = "0123456789";
      var i = 0;
      var n = 0;
      s = "";
      while (i <= len - 1) {
        n = Math.floor(Math.random() * 4);
        s += nuc[n];
        i++;
      }
      return s;
    }

